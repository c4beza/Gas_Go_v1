@model IEnumerable<Gas_Go_v1.Models.Thread>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Gas go community</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ThreadId }) |
                @Html.ActionLink("View Post", "AdminIndex","Posts", new { id = item.ThreadId},null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ThreadId })
            </td>
        </tr>
    }

</table>
